{
    "name": "@marketing-platform/backend",
    "targets": {
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "command": "nodemon --watch src --exec 'ts-node apps/backend/main.ts'"
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsc --project apps/backend/tsconfig.app.json"
        }
      }
    }
  }